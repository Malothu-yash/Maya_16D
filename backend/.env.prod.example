# Production .env template (cloud-only)
# Copy this to backend/.env and fill real values. Do NOT commit your secrets.

# --- Databases (managed services) ---
MONGO_URI=mongodb+srv://USER:PASS@cluster.mongodb.net/DB
MONGO_DB=MAYA

# Redis Cloud (TLS). Prefer rediss:// when your provider requires TLS. Username often 'default'.
# Example with password in URL (mask when sharing):
REDIS_URL=rediss://default:PASSWORD@HOST:6380/0

# Neo4j Aura (TLS via neo4j+s)
NEO4J_URI=neo4j+s://YOUR_INSTANCE.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME
NEO4J_DATABASE=neo4j
NEO4J_STARTUP_TIMEOUT_SECS=12

# --- AI Providers ---
# Gemini primary (single or comma-separated GEMINI_API_KEYS)
GEMINI_API_KEYS=key1,key2
GOOGLE_MODEL=gemini-2.5-flash
OPENAI_API_KEY=

# Cohere fallback
COHERE_API_KEY=
COHERE_MODEL=command-r

# Optional Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Orchestration
AI_PROVIDER_ORDER=gemini, cohere
AI_PROVIDER_FAILURE_TIMEOUT=300
AI_PRIMARY_TIMEOUT=8
AI_FALLBACK_TIMEOUT=10

# Optional hedging
AI_ENABLE_HEDGED=true
AI_HEDGE_DELAY_MS=90
AI_MAX_PARALLEL=2

# --- Pinecone ---
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=maya
PINECONE_DIMENSIONS=1024

# --- JWT ---
SECRET_KEY=CHANGE_ME
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- SMTP (optional; required for email features) ---
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# Back-compat
SMTP_USER=${MAIL_USERNAME}
SMTP_PASS=${MAIL_PASSWORD}

# --- API limits ---
API_MONTHLY_LIMIT=100

# --- CORS ---
# Set to your deployed frontend origin(s)
CORS_ORIGINS=https://app.myfrontend.com
CORS_DYNAMIC_LOCAL=0
DEBUG_CORS=0

# --- External APIs ---
YOUTUBE_API_KEY=
